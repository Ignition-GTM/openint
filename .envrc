#!/usr/bin/env bash

# Use the Unofficial Bash Strict Mode
# @see http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail

PATH_add "${PWD}/bin"
PATH_add "${PWD}/node_modules/.bin"

[[ -f .envrc.encrypted ]] && source_env .envrc.encrypted
[[ -f .envrc.local ]] && source_env .envrc.local

export KV_STORE='fs'
export FS_BASE_PATH='./__encrypted__'
export FS_META_PATH="$FS_BASE_PATH/meta"

export PROXY_URL=http://localhost:8080
export PROXY_CERT=`cat ~/.mitmproxy/mitmproxy-ca-cert.pem`
export USE_PROXY_AGENT=true
